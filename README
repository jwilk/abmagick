.. code:: console

   $ abmagick hello <<< 'Hello world!'
   convert xc:red -resize '1x13!' -depth 8 -fill '#484848' -draw 'point 0,0' -fill '#656565' -draw 'point 0,1' -fill '#6c6c6c' -draw 'point 0,2' -fill '#6c6c6c' -draw 'point 0,3' -fill '#6f6f6f' -draw 'point 0,4' -fill '#202020' -draw 'point 0,5' -fill '#777777' -draw 'point 0,6' -fill '#6f6f6f' -draw 'point 0,7' -fill '#727272' -draw 'point 0,8' -fill '#6c6c6c' -draw 'point 0,9' -fill '#646464' -draw 'point 0,10' -fill '#212121' -draw 'point 0,11' -fill '#0a0a0a' -draw 'point 0,12' gray:hello

   $ cat hello
   cat: hello: No such file or directory

   $ abmagick hello <<< 'Hello world!' | sh

   $ cat hello
   Hello world!

